<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - HabitFlow</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', sans-serif;
            background: #0a0a0a;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #e5e5e5;
        }

        .auth-container {
            width: 100%;
            max-width: 420px;
        }

        .auth-page {
            background: #141414;
            padding: 40px;
            border-radius: 8px;
            border: 1px solid #222;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 32px;
        }

        .logo-section h1 {
            font-size: 32px;
            font-weight: 600;
            color: #fff;
            margin-bottom: 8px;
        }

        .logo-section p {
            font-size: 14px;
            color: #6b6b6b;
        }

        h2 {
            font-size: 24px;
            font-weight: 600;
            color: #fff;
            margin-bottom: 24px;
            text-align: center;
        }

        /* Errors */
        .errors {
            background: #2a1515;
            border: 1px solid #dc2626;
            border-radius: 6px;
            padding: 16px;
            margin-bottom: 24px;
            list-style: none;
        }

        .errors li {
            color: #fca5a5;
            font-size: 14px;
            padding: 4px 0;
        }

        .errors li:before {
            content: "âš  ";
            margin-right: 8px;
        }

        /* Form */
        form {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 14px 16px;
            background: #0a0a0a;
            border: 1px solid #333;
            border-radius: 6px;
            color: #e5e5e5;
            font-size: 14px;
            transition: all 0.2s ease;
        }

        input:focus {
            outline: none;
            border-color: #fff;
            background: #111;
        }

        input::placeholder {
            color: #555;
        }

        .btn {
            padding: 14px 28px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            border: 1px solid transparent;
            transition: 0.2s;
        }

        .btn-primary {
            background: #fff;
            color: #0a0a0a;
            border-color: #fff;
        }

        .btn-primary:hover {
            background: #e5e5e5;
            transform: translateY(-1px);
        }

        /* Password Toggle */
        .password-field {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6b6b6b;
            cursor: pointer;
            font-size: 12px;
            padding: 4px;
        }

        .password-toggle:hover {
            color: #e5e5e5;
        }

        .auth-footer {
            text-align: center;
            margin-top: 24px;
            padding-top: 24px;
            border-top: 1px solid #222;
        }

        .auth-footer a {
            color: #fff;
            text-decoration: none;
        }

        .auth-footer a:hover {
            opacity: 0.7;
        }
    </style>
</head>

<body>
    <div class="auth-container">
        
        <div class="logo-section">
            <h1>HabitFlow</h1>
            <p>Track your habits, build your future</p>
        </div>

        <main class="auth-page">

            <h2>Welcome Back</h2>

            <% if (locals && locals.errors && locals.errors.length) { %>
                <ul class="errors">
                    <% locals.errors.forEach(err => { %>
                        <li><%= err %></li>
                    <% }); %>
                </ul>
            <% } %>

            <form action="/login" method="POST">
                <input 
                    type="text" 
                    name="username" 
                    placeholder="Username" 
                    required 
                    autocomplete="username"
                />

                <div class="password-field">
                    <input 
                        type="password" 
                        name="password" 
                        id="password"
                        placeholder="Password" 
                        required 
                        autocomplete="current-password"
                    />
                    <button type="button" class="password-toggle" onclick="togglePassword()">Show</button>
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
            </form>

            <div class="auth-footer">
                <p>Don't have an account? <a href="/register">Register</a></p>
            </div>

        </main>
    </div>

    <script>
        function togglePassword() {
            const input = document.getElementById("password");
            const btn = document.querySelector(".password-toggle");

            if (input.type === "password") {
                input.type = "text";
                btn.textContent = "Hide";
            } else {
                input.type = "password";
                btn.textContent = "Show";
            }
        }
    </script>
</body>
</html>
