<style>
    /* --- HEADER VARIABLES --- */
    :root {
        --header-bg: rgba(5, 5, 5, 0.8); /* Matches body #050505 with transparency */
        --header-border: #27272a;        /* Matches dashboard borders */
        --text-main: #ededed;
        --text-muted: #a1a1aa;
        --accent-gradient: linear-gradient(135deg, #6366f1, #a855f7);
        --bg-hover: #1a1a1a;
    }

    /* --- BASE STYLES --- */
    .main-header {
        background: var(--header-bg);
        border-bottom: 1px solid var(--header-border);
        padding: 16px 0;
        margin-bottom: 40px;
        position: sticky;
        top: 0;
        z-index: 100;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
    }

    .header-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* --- LOGO --- */
    .logo a {
        font-size: 24px;
        font-weight: 800;
        letter-spacing: -1px;
        text-decoration: none;
        color: var(--text-main);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .logo-text-gradient {
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* --- NAVIGATION --- */
    .nav-links {
        display: flex;
        align-items: center;
        gap: 48px; /* INCREASED SPACING HERE */
        list-style: none;
        margin: 0; padding: 0;
    }

    .nav-link {
        color: var(--text-muted);
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: color 0.2s;
    }

    .nav-link:hover, .nav-link.active {
        color: var(--text-main);
    }

    /* --- USER PROFILE BADGE --- */
    .user-badge {
        display: flex;
        align-items: center;
        gap: 12px;
        background: transparent;
        padding: 4px 16px 4px 4px;
        border-radius: 100px;
        border: 1px solid var(--header-border);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
    }

    .user-badge:hover {
        background: var(--bg-hover);
        border-color: #52525b;
    }

    .user-avatar {
        width: 32px; height: 32px;
        background: var(--bg-hover);
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        font-size: 14px; color: var(--text-main);
        font-weight: bold;
        box-shadow: 0 0 0 1px var(--header-border);
    }

    .user-meta {
        display: flex;
        flex-direction: column;
        line-height: 1.1;
    }

    .user-name { font-size: 13px; font-weight: 600; color: var(--text-main); }
    .user-lvl { font-size: 10px; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.5px; }

    /* --- BUTTONS --- */
    .btn-header {
        padding: 10px 20px;
        border-radius: 100px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-primary { 
        background: var(--text-main); 
        color: #000; 
    }
    .btn-primary:hover { 
        background: #fff; 
        transform: translateY(-1px); 
        box-shadow: 0 0 15px rgba(255,255,255,0.15);
    }

    .btn-secondary { color: var(--text-muted); }
    .btn-secondary:hover { color: var(--text-main); }

    /* --- MOBILE MENU --- */
    .mobile-toggle {
        display: none;
        background: transparent;
        border: none;
        color: var(--text-main);
        font-size: 24px;
        cursor: pointer;
    }

    .mobile-menu {
        display: none;
        position: absolute;
        top: 100%; left: 0; right: 0;
        background: #0f0f0f;
        border-bottom: 1px solid var(--header-border);
        padding: 20px;
        flex-direction: column;
        gap: 15px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.5);
    }

    .mobile-menu.active { display: flex; }

    @media (max-width: 768px) {
        .nav-links { display: none; } /* Hide desktop nav */
        .mobile-toggle { display: block; } /* Show burger */
        .user-badge { display: none; } /* Hide badge on mobile */
    }

    .logo {
        margin-right: 50px;
    }
</style>

<header class="main-header">
    <div class="header-container">
        <div class="logo">
            <a href="/">
                Habit<span class="logo-text-gradient">Flow</span>
            </a>
        </div>

        <nav>
            <ul class="nav-links">
                <% if (user) { %>
                    <li><a href="/" class="nav-link">Dashboard</a></li>
                    <li><a href="/habits/manage" class="nav-link">Manage Habits</a></li>
                    <li><a href="/leaderboard" class="nav-link">Leaderboard</a></li>
                <% } else { %>
                    <li><a href="#" class="nav-link">Features</a></li>
                    <li><a href="#" class="nav-link">About</a></li>
                <% } %>
            </ul>
        </nav>

        <div class="header-right">
            <% if (!user) { %>
                <div style="display: flex; align-items: center; gap: 24px;">
                    <a href="/login" class="nav-link">Log in</a>
                    <a href="/register" class="btn-header btn-primary">Start Free</a>
                </div>
            <% } else { %>
                <div style="display:flex; align-items:center; gap:24px;">
                    <% if (user.role === 'admin') { %>
                        <a href="/admin/dashboard" class="nav-link" style="color:#fbbf24;">Admin</a>
                    <% } %>
                    
                    <a href="/profile" class="user-badge">
                        <div class="user-avatar"><%= user.username.charAt(0).toUpperCase() %></div>
                        <div class="user-meta">
                            <span class="user-name"><%= user.username %></span>
                            <span class="user-lvl">Lvl <%= user.level %></span>
                        </div>
                    </a>
                    
                    <a href="/logout" class="nav-link" style="font-size:13px; opacity: 0.6;">Log out</a>
                </div>
            <% } %>

            <button class="mobile-toggle" onclick="toggleMenu()">☰</button>
        </div>
    </div>

    <div class="mobile-menu" id="mobileMenu">
        <% if (user) { %>
            <div class="user-badge" style="display:flex; width:fit-content; background: #1a1a1a;">
                <div class="user-avatar"><%= user.username.charAt(0).toUpperCase() %></div>
                <div class="user-meta">
                    <span class="user-name"><%= user.username %></span>
                    <span class="user-lvl">Lvl <%= user.level %> • <%= user.xp %> XP</span>
                </div>
            </div>
            <a href="/" class="nav-link">Dashboard</a>
            <a href="/habits/manage" class="nav-link">My Habits</a>
            <a href="/profile" class="nav-link">Profile Settings</a>
            <a href="/leaderboard" class="nav-link">Leaderboard</a>
            <hr style="border:0; border-top:1px solid var(--header-border);">
            <a href="/logout" class="nav-link" style="color:#ef4444;">Log Out</a>
        <% } else { %>
            <a href="/login" class="btn-header btn-secondary" style="text-align:center; border: 1px solid #333;">Log In</a>
            <a href="/register" class="btn-header btn-primary" style="text-align:center;">Sign Up Free</a>
        <% } %>
    </div>
</header>

<script>
    function toggleMenu() {
        const menu = document.getElementById('mobileMenu');
        menu.classList.toggle('active');
    }
</script>