<header class="main-header">
  <div class="header-left">
    <h1 class="logo"><a href="/">HabitFlow</a></h1>
    <p class="subtitle">Track your habits, build your future</p>
  </div>

  <div class="header-right">
    <% if (!user) { %>
      <a href="/register" class="btn btn-primary">Let's Get Started</a>
      <a href="/login" class="btn btn-secondary">Login</a>
    <% } else { %>
      <a href="/habits/new" class="btn btn-primary">+ New Habit</a>
      <a href="/habits/manage" class="btn btn-secondary">Manage Habits</a>
      <a href="/profile" class="btn btn-secondary">Profile</a>
      <% if (user.is_admin) { %>
        <a href="/admin/dashboard" class="btn btn-admin">Admin</a>
      <% } %>
      <a href="/logout" class="btn btn-logout">Logout</a>
    <% } %>
  </div>
</header>
