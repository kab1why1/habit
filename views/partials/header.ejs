<!-- views/partials/header.ejs -->
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', sans-serif;
        background: #0a0a0a;
        color: #e5e5e5;
    }

    .main-header {
        background: #141414;
        padding: 20px 32px;
        border-radius: 8px;
        border: 1px solid #222;
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto 20px auto;
    }

    .header-left {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .logo {
        font-size: 24px;
        font-weight: 600;
        letter-spacing: -0.5px;
    }

    .logo a {
        color: #fff;
        text-decoration: none;
        transition: opacity 0.2s ease;
    }

    .logo a:hover {
        opacity: 0.8;
    }

    .subtitle {
        font-size: 13px;
        color: #6b6b6b;
        font-weight: 400;
    }

    .header-right {
        display: flex;
        align-items: center;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 12px;
        list-style: none;
    }

    .welcome {
        font-size: 14px;
        color: #e5e5e5;
        font-weight: 500;
        padding: 0 12px;
    }

    .btn {
        padding: 8px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.2s ease;
        display: inline-block;
        border: 1px solid transparent;
    }

    .btn-primary {
        background: #fff;
        color: #0a0a0a;
    }

    .btn-primary:hover {
        background: #e5e5e5;
        transform: translateY(-1px);
    }

    .btn-secondary {
        background: transparent;
        color: #e5e5e5;
        border-color: #333;
    }

    .btn-secondary:hover {
        border-color: #555;
        background: #1a1a1a;
    }

    .btn-warning {
        background: #ffa500;
        color: #0a0a0a;
    }

    .btn-warning:hover {
        background: #ff9500;
        transform: translateY(-1px);
    }

    .menu-toggle {
        display: none;
        background: transparent;
        border: 1px solid #333;
        color: #e5e5e5;
        padding: 8px 12px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
    }

    .menu-toggle:hover {
        border-color: #555;
        background: #1a1a1a;
    }

    @media (max-width: 768px) {
        .main-header {
            flex-wrap: wrap;
            gap: 16px;
        }

        .menu-toggle {
            display: block;
        }

        .header-right {
            width: 100%;
            order: 3;
        }

        .nav-links {
            flex-direction: column;
            width: 100%;
            gap: 8px;
            display: none;
        }

        .nav-links.active {
            display: flex;
        }

        .nav-links li {
            width: 100%;
        }

        .btn {
            width: 100%;
            text-align: center;
        }

        .welcome {
            padding: 8px 12px;
            display: block;
            text-align: center;
            background: #1a1a1a;
            border-radius: 6px;
        }
    }
</style>

<header class="main-header">
    <div class="header-left">
        <h1 class="logo"><a href="/">HabitFlow</a></h1>
        <p class="subtitle">Track your habits, build your future</p>
    </div>

    <button class="menu-toggle" onclick="toggleMenu(this)">Menu</button>

    <div class="header-right">
        <ul class="nav-links">
            <% if (!user) { %>
                <!-- Not logged in -->
                <li><a href="/register" class="btn btn-primary">Let's Get Started</a></li>
                <li><a href="/login" class="btn btn-secondary">Login</a></li>

            <% } else { %>
                <!-- Logged in -->
                <li><span class="welcome">Hello, <%= user.username %>!</span></li>
                <li><a href="/profile" class="btn btn-primary">Profile</a></li>
                <li><a href="/habits/manage" class="btn btn-secondary">My Habits</a></li>

                <% if (user.role === "admin") { %>
                    <li><a href="/admin/dashboard" class="btn btn-warning">Admin Panel</a></li>
                <% } %>

                <li><a href="/logout" class="btn btn-secondary">Logout</a></li>
            <% } %>
        </ul>
    </div>
</header>

<script>
    function toggleMenu(button) {
        const navLinks = button.nextElementSibling.querySelector('.nav-links');
        navLinks.classList.toggle('active');
    }
</script>
