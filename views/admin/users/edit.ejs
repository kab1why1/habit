<h2>Edit User</h2>
<% if (error) { %><p style="color:red;"><%= error %></p><% } %>

<form action="/admin/users/<%= userToEdit.id %>/edit" method="POST">
  <label>Username</label>
  <input name="username" value="<%= userToEdit.username %>" required />

  <label>New password (leave blank to keep)</label>
  <input name="password" type="password" />

  <label>Role</label>
  <select name="role">
    <option value="user" <%= userToEdit.role === 'user' ? 'selected' : '' %>>User</option>
    <option value="admin" <%= userToEdit.role === 'admin' ? 'selected' : '' %>>Admin</option>
  </select>

  <div style="margin-top:12px;">
    <button class="btn" type="submit">Save</button>
    <a href="/admin/users" class="btn">Cancel</a>
  </div>
</form>
