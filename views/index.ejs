<div class="container">
    <main>

        <!-- Stats -->
        <section class="stats-grid">
            <div class="card">
                <h3>Total Habits</h3>
                <p class="value"><%= locals.habits.length %></p>
            </div>
            <div class="card">
                <h3>Today's Progress</h3>
                <p class="value">0/<%= locals.habits.length %></p>
            </div>
            <div class="card">
                <h3>Best Streak</h3>
                <p class="value">0 days</p>
            </div>
            <div class="card">
                <h3>Total Completions</h3>
                <p class="value">0</p>
            </div>
        </section>

        <!-- Habits List -->
        <section class="week">
            <h2>Your Habits</h2>

            <% if (locals.habits.length === 0) { %>
                <p style="color:#777; padding: 20px;">No habits yet. Add one.</p>
            <% } %>

            <% locals.habits.forEach(habit => { %>
                <div class="card" style="margin-bottom: 10px;">
                    <h3><%= habit.title %></h3>
                    <p style="color: #999;"><%= habit.description %></p>
                </div>
            <% }); %>
        </section>

        <!-- Today message -->
        <section class="today-habits">
            <div class="empty-icon">ðŸŽ¯</div>
            <h3>You're doing great!</h3>
            <p>Create or continue your habits.</p>
            <a href="#" class="create-btn">+ Create Habit</a>
        </section>

    </main>
</div>
