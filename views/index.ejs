<div class="container">
    <main>

        <section class="stats-grid">
            <div class="card">
                <h3>Total Habits</h3>
                <p class="value"><%= locals.habits.length %></p>
            </div>
            <div class="card">
                <h3>Today's Progress</h3>
                <p class="value">0/0</p>
            </div>
            <div class="card">
                <h3>Best Streak</h3>
                <p class="value">0 days</p>
            </div>
            <div class="card">
                <h3>Total Completions</h3>
                <p class="value">0</p>
            </div>
        </section>

        <section class="week">
            <h2>Your Habits</h2>

            <% if (locals.habits.length === 0) { %>
                <p>No habits yet. Add one!</p>
            <% } else { %>

                <div class="week-days" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));">

                    <% locals.habits.forEach(habit => { %>
                        <a href="/habit/<%= habit.id %>" class="day" style="text-decoration:none;">
                            <strong><%= habit.title %></strong>
                            <span class="date"><%= habit.id %></span>
                            <span class="small"><%= habit.description %></span>
                        </a>
                    <% }) %>

                </div>

            <% } %>

        </section>

        <section class="today-habits">
            <div class="empty-icon">âœ¨</div>
            <h3>Create a new habit</h3>
            <p>Your future self will thank you</p>
            <a href="#" class="create-btn">+ Add Habit</a>
        </section>

    </main>
</div>
