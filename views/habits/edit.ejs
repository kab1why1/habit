<main>
  <h2>Edit Habit</h2>
  <% if (locals.error) { %><p style="color:red"><%= locals.error %></p><% } %>
  <form action="/habits/<%= locals.habit.id %>/edit" method="POST">
    <label>Title</label>
    <input name="title" value="<%= locals.habit.title %>" required>
    <label>Description</label>
    <textarea name="description"><%= locals.habit.description %></textarea>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
  <form action="/habits/<%= locals.habit.id %>/delete" method="POST" style="margin-top:12px;">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
</main>
