<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Habits - HabitFlow</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', sans-serif;
            background: #0a0a0a;
            min-height: 100vh;
            padding: 20px;
            color: #e5e5e5;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        h2 {
            font-size: 28px;
            font-weight: 600;
            color: #fff;
            margin-bottom: 24px;
            letter-spacing: -0.5px;
        }

        /* Empty State */
        .empty-state {
            background: #141414;
            padding: 60px 40px;
            border-radius: 8px;
            border: 1px solid #222;
            text-align: center;
        }

        .empty-state p {
            color: #6b6b6b;
            font-size: 15px;
            margin-bottom: 20px;
        }

        .empty-state a {
            color: #fff;
            text-decoration: underline;
        }

        .empty-state a:hover {
            opacity: 0.8;
        }

        /* Habit List */
        .habit-manage-list {
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin-bottom: 24px;
        }

        .habit-manage-list li {
            background: #141414;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #222;
            border-left-width: 4px;
            display: flex;
            align-items: center;
            gap: 12px;
            flex-wrap: wrap;
            transition: all 0.2s ease;
        }

        .habit-manage-list li:hover {
            border-color: #333;
            transform: translateX(2px);
        }

        .habit-info {
            flex: 1;
            min-width: 200px;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .habit-info strong {
            font-size: 16px;
            font-weight: 600;
            color: #fff;
        }

        .habit-info a {
            color: #fff;
            text-decoration: none;
            transition: opacity 0.2s ease;
        }

        .habit-info a:hover {
            opacity: 0.7;
        }

        .habit-category {
            font-size: 13px;
            color: #6b6b6b;
        }

        .habit-actions {
            display: flex;
            gap: 8px;
            align-items: center;
        }

        /* Buttons */
        .btn {
            padding: 8px 16px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 13px;
            font-weight: 500;
            transition: all 0.2s ease;
            border: 1px solid #333;
            background: transparent;
            color: #e5e5e5;
            cursor: pointer;
            white-space: nowrap;
        }

        .btn:hover {
            border-color: #555;
            background: #1a1a1a;
        }

        .tiny-btn {
            padding: 6px 12px;
            font-size: 12px;
        }

        .btn-primary {
            background: #fff;
            color: #0a0a0a;
            border-color: #fff;
        }

        .btn-primary:hover {
            background: #e5e5e5;
            border-color: #e5e5e5;
            transform: translateY(-1px);
        }

        .delete-btn {
            border-color: #dc2626;
            color: #dc2626;
        }

        .delete-btn:hover {
            background: #dc2626;
            color: #fff;
        }

        .completed-indicator {
            background: #22c55e;
            color: #fff;
            font-size: 11px;
            padding: 4px 8px;
            border-radius: 4px;
            font-weight: 500;
        }

        .action-bar {
            margin-top: 24px;
            padding-top: 24px;
            border-top: 1px solid #222;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 16px;
        }

        .habit-count {
            font-size: 14px;
            color: #6b6b6b;
        }

        /* Color indicators */
        .color-health { border-left-color: #22c55e !important; }
        .color-learning { border-left-color: #3b82f6 !important; }
        .color-fitness { border-left-color: #f59e0b !important; }
        .color-career { border-left-color: #8b5cf6 !important; }
        .color-mindfulness { border-left-color: #ec4899 !important; }
        .color-default { border-left-color: #6b6b6b !important; }

        /* Responsive */
        @media (max-width: 768px) {
            .habit-manage-list li {
                flex-direction: column;
                align-items: flex-start;
            }

            .habit-actions {
                width: 100%;
                flex-wrap: wrap;
            }

            .btn {
                flex: 1;
                text-align: center;
            }

            h2 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Manage My Habits</h2>

        <% if (!habits || habits.length === 0) { %>
            <div class="empty-state" style="margin-bottom: 60px;">
                <p>No habits found. <a href="/habits/new">Create your first habit</a></p>
            </div>
        <% } else { %>
            <ul class="habit-manage-list">
                <% habits.forEach(habit => { 
                    const liClass = `${habit.completed ? 'completed' : ''} ${habit.category ? 'color-' + habit.category.toLowerCase() : 'color-default'}`;
                    const liStyle = `border-left-color: ${habit.completed ? '#22c55e' : (habit.color || '#6b6b6b')};`;
                %>
                <li class="<%= liClass %>"  ">
                    <div class="habit-info">
                        <a href="/habits/<%= habit.id %>"><strong><%= habit.title %></strong></a>
                        <span class="habit-category"><%= habit.category || 'General' %></span>
                    </div>

                    <% if (habit.completed) { %>
                        <span class="completed-indicator">âœ” Completed</span>
                    <% } %>

                    <div class="habit-actions">
                        <form action="/habits/<%= habit.id %>/toggle" method="POST" style="display:inline">
                            <button class="btn tiny-btn" type="submit"><%= habit.completed ? 'Undo' : 'Done' %></button>
                        </form>
                        <a href="/habits/<%= habit.id %>/edit" class="btn tiny-btn">Edit</a>
                        <form action="/habits/<%= habit.id %>/delete" method="POST" style="display:inline">
                            <button class="btn tiny-btn delete-btn" type="submit" onclick="return confirm('Are you sure you want to delete this habit?')">Delete</button>
                        </form>
                    </div>
                </li>
                <% }); %>
            </ul>
        <% } %>

        <div class="action-bar">
            <span class="habit-count"><%= habits.length %> total habits</span>
            <a href="/habits/new" class="btn btn-primary">+ Create New Habit</a>
        </div>
    </div>

    <script>
        // Delete confirmation
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                if (!confirm('Are you sure you want to delete this habit?')) e.preventDefault();
            });
        });
    </script>
</body>
</html>
